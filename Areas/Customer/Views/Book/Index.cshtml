@model List<Ticket>

<div class="container my-5">
    <h2 class="mb-4">🎟️ Reserved Tickets</h2>

    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    There are no tickets reserved yet.
                </div>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <!-- Movie Poster -->
                        <p>
                            <a type="button" class="btn btn-danger" href="/Customer/Book/DeleteTicket?MovieId=@item.MovieId">
                                🗑️ Delete Ticket
                            </a>
                        </p>
                        <img src="~/images/movies/@item.Movie?.ImgUrl"
                             class="card-img-top"
                             alt="@item.Movie?.Name"
                             style="height:400px; object-fit:cover;" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Movie?.Name</h5>
                            <p class="text-muted mb-2">
                                📍 Location: <strong>@item.Movie?.Cinema?.Name</strong>
                            </p>
                            <p>
                                🎟️ No. Tickets:
                                <br />
                                
                                <a href="/Customer/Book/IncrementTicket?MovieId=@item.MovieId" class="btn btn-primary btn-sm">
                                    +
                                </a>
                                <input class="form-control form-control-sm"
                                       id="form1" name="quantity" type="number" value="@item.Count" min="1" style="max-width: 80px;" />
                                <a href="/Customer/Book/DecrementTicket?MovieId=@item.MovieId" class="btn btn-primary btn-sm">
                                    -
                                </a>
                            </p>
                           
                            <p class="h6">
                                💵 Total Price:
                                @(item.Movie != null ? (item.Movie.Price * item.Count).ToString("c") : 0)
                            </p>
                            </div>
                        </div>
                    </div>
            }
        }
        
    </div>
    <div class="input-group mb-3" style="max-width: 300px;">
        <form>
            <div>
                <label class="form-label" for="form1">Discound Code</label>
                <input type="text" class="form-control" placeholder="Enter discount code" id="form1" name="code">
            </div>

            <button class="btn btn-dark" type="submit">Apply</button>
        </form>
    </div>
    <div class="card shadow-sm text-center" style="max-width: 18rem;">
        <div class="card-body ">
            <h6 class="card-subtitle mb-2 text-muted">Total Price</h6>
            <h4 class="card-title text-success">@ViewBag.TotalPrice.ToString("c") </h4>

            <a href="/Customer/book/Pay" class="btn btn-success">
                💳 Pay Now
            </a>
        </div>
    </div>
</div>


@section Scripts
{
    <partial name="_NotificationPartial.cshtml" />
}
