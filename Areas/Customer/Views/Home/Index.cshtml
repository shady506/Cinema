@model List<Movies>

@{
    ViewData["Title"] = "Home Page";
}


<form class="d-flex ms-auto" asp-action="Index" asp-controller="Home" method="get">
    <input class="form-control me-2" type="search" name="MovieName" placeholder="Search movies..." aria-label="Search" value="@ViewBag.Name">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>
    <!-- Container for Movies -->
    <div class="container my-5">
        <h2 class="mb-4 text-center">🎬 Now Showing</h2>
        <div class="row g-4">

@foreach (var item in Model)
        {

            <div class="col-md-4">
                <div class="card movie-card h-100 shadow-sm">
                    <!-- Movie Image -->
                    <img src="~/images/movies/@item.ImgUrl" class="card-img-top" alt="Movie @item.Id" style="height:300px; object-fit:cover;">

                    <!-- Movie Body -->
                    <div class="card-body d-flex flex-column">
                        <!-- Movie Title -->
                        <h4 class="card-title text-primary">@item.Name</h4>

                        <!-- Movie Description -->
                        <p class="card-text text-muted">
                            <strong>Description:</strong>
                            @if (item.Description is not null && item.Description.Length > 50)
                            {
                            <p class="card-text"> @item.Description.Substring(0, 50)...</p>
                            }
                            else
                            {
                            <p class="card-text"> @item.Description</p>
                            }
                        </p>

                        <!-- Movie Details -->
                        <ul class="list-unstyled small mb-3">
                            <li><strong>Price:</strong> @item.Price</li>
                            <li><strong>Start Date:</strong> @item.StartDate</li>
                            <li><strong>End Date:</strong> @item.EndDate</li>
                            <li><strong>Category:</strong> @item.Category.Name</li>
                            <li><strong>Cinema:</strong> @item.Cinema.Name</li>
                            @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else if (DateTime.Now < item.StartDate)
                            {
                                <span class="badge bg-warning text-dark">Upcoming</span>

                            }
                            else
                            {
                                <span class="badge bg-danger">Expired</span>
    
                            }

                        </ul>

                        <!-- Buttons -->
                        <div class="mt-auto d-flex gap-2">
                            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-outline-secondary flex-fill">
                                More Details
                            </a>
                        </div>

                    </div>
                </div>
            </div>



        }
    </div>
</div>
<div>
<!-- Pagination -->
<nav aria-label="Movie pagination" class="mt-4">
    <ul class="pagination justify-content-center">
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
        </li>

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }

        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
        </li>
    </ul>
</nav>
</div>



@section Scripts
{
    <partial name="_NotificationPartial.cshtml" />
}
