@model Movies

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="row g-0">
            <!-- Movie Poster -->
            <div class="col-md-4">
                <img src="~/images/movies/@Model.ImgUrl"
                     alt="@Model.Name"
                     class="img-fluid rounded-start"
                     style="height:100%; object-fit:cover;">
            </div>

            <!-- Movie Info -->
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title text-primary mb-3">@Model.Name</h2>

                    <!-- Status Badge -->
                    <p>
                        <strong>Status:</strong>
                        @if (DateTime.Now >= Model.StartDate && DateTime.Now <= Model.EndDate)
                        {
                            <span class="badge bg-success">Available 🎟</span>
                        }
                        else if (DateTime.Now < Model.StartDate)
                        {
                            <span class="badge bg-warning text-dark">Upcoming ⏳</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Expired ❌</span>
                        }
                    </p>

                    <!-- Description -->
                    <p class="card-text">
                        <strong>Description:</strong><br />
                        @Model.Description
                    </p>

                    <!-- Movie Details -->
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><strong>Price:</strong> @Model.Price $</li>
                        <li class="list-group-item"><strong>Start Date:</strong> @Model.StartDate</li>
                        <li class="list-group-item"><strong>End Date:</strong> @Model.EndDate</li>
                        <li class="list-group-item"><strong>Category:</strong> @Model.Category.Name</li>
                        <li class="list-group-item"><strong>Cinema:</strong> @Model.Cinema.Name</li>
                    </ul>

                    <!-- 🎭 Actors -->
                    <div class="mt-4">
                        <h4>🎭 Actors in this Movie</h4>
                        <div class="row">
                            @foreach (var item in Model.Actors)
                            {
                                <div class="col-md-3 col-sm-4 col-6 mb-3">
                                    <div class="card h-100 text-center shadow-sm border-0">
                                        <a asp-controller="Home" asp-action="ActorDetails" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                                            <img src="~/images/cast/@item.ProfilePicture"
                                                 class="card-img-top rounded-circle mx-auto mt-3 shadow-sm"
                                                 alt="@item.FirstName"
                                                 style="width:120px; height:120px; object-fit:cover;">
                                            <div class="card-body">
                                                <h6 class="card-title fw-bold">@item.FirstName @item.LastName</h6>
                                                <p class="text-muted small">
                                                    @((!string.IsNullOrEmpty(item.Bio) && item.Bio.Length > 50) ? item.Bio.Substring(0, 50) + "..." : item.Bio)
                                                </p>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>


                    <div class="mt-4">
                        <form asp-area="Customer" asp-controller="Book" asp-action="BookTicket" method="post" class="mt-3">
                            <input type="hidden" name="MovieId" value="@Model.Id" />

                            <div class="mt-3 d-flex gap-2 align-items-center">
                                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                                    ⬅ Back to Movies
                                </a>

                                <!-- Counter Input -->
                                <input class="form-control text-center"
                                       id="inputQuantity"
                                       name="Count"
                                       type="number"
                                       value="1"
                                       min="1"
                                       style="max-width: 80px;" />

                                <button type="submit" class="btn btn-primary">
                                    🎟 Book Ticket
                                </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
