@model List<Categories>

<div class="container mt-4">
    <h3>📂 Categories</h3>
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Home" asp-action="Index" asp-route-id="@item.Id"
                   class="text-decoration-none">
                    @item.Name
                </a>
            </li>
        }
    </ul>
</div>
