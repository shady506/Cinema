@model List<Actors>

@{

    const int quantity = 10;
}

@section Scripts
{
    <partial name="_NotificationPartial.cshtml" />
}

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">All Actors</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/Admin/Actors/Create" class="btn btn-success">Create</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Bio</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>

                            @if (item.Bio is not null && item.Bio.Length > 50)
                            {
                                <td>@item.Bio.Substring(0, 30)...</td>
                            }
                            else
                            {
                                <td>@item.Bio</td>
                            }

                            <td>
                                <a href="/Admin/Actors/Edit/@item.Id" type="button" class="btn btn-warning">Edit</a>
                                <a href="/Admin/Actors/Delete/@item.Id"
                                   class="btn btn-danger btn-delete"
                                   data-id="">Delete</a>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".btn-delete").forEach(button => {
            button.addEventListener("click", function (e) {
                e.preventDefault(); // Stop normal navigation
                const id = this.getAttribute("data-id");
                const url = this.getAttribute("href");

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Option 1: Redirect to delete action
                        window.location.href = url;

                        // Option 2: Use fetch/ajax to call delete API then refresh table
                        /*
                        fetch(url, { method: 'POST' })
                            .then(res => res.json())
                            .then(data => {
                                Swal.fire("Deleted!", "product has been deleted.", "success")
                                    .then(() => location.reload());
                            });
                        */
                    }
                });
            });
        });
    });
</script>

